<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewhistory"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="right|center|end"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:gravity="right|center|end"
            android:background="@color/white"
            android:textColor="@color/black"
            android:text="0"
            android:textSize="60sp" />

        <!--    </LinearLayout>-->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:columnCount="4"
            android:rowCount="5">

            <Button
                android:id="@+id/butAC"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:text="AC"
                android:textColor="@color/orange"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butDEL"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:text="del"
                android:textColor="@color/orange"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butDIVIDE"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:text="/"
                android:textColor="@color/orange"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butMULTI"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:text="*"
                android:textColor="@color/orange"
                android:textSize="30dp" />


            <Button
                android:id="@+id/butMinus"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:text="-"
                android:textColor="@color/orange"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butthree"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:text="3"
                android:textColor="@color/orange"
                android:textSize="30dp" />

            <Button
                android:id="@+id/buttwo"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:text="2"
                android:textColor="@color/orange"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butONE"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:text="1"
                android:textColor="@color/orange"
                android:textSize="30dp" />


            <Button
                android:id="@+id/butplus"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:text="+"
                android:textColor="@color/orange"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butsix"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:text="6"
                android:textColor="@color/orange"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butfive"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:text="5"
                android:textColor="@color/orange"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butfour"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:text="4"
                android:textColor="@color/orange"
                android:textSize="30dp" />


            <Button
                android:id="@+id/but_equal"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="3"
                android:layout_rowSpan="2"
                android:layout_rowWeight="2"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:background="@color/orange"
                android:backgroundTint="@color/white"
                android:text="="
                android:textColor="@color/white"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butnine"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:text="9"
                android:textColor="@color/orange"
                android:textSize="30dp" />

            <Button
                android:id="@+id/buteight"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:text="8"
                android:textColor="@color/orange"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butseven"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:text="7"
                android:textColor="@color/orange"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butzero"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:text="0"
                android:textColor="@color/orange"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butpoint"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@color/teal_700"
                android:backgroundTint="@color/white"
                android:text="."
                android:textColor="@color/orange"
                android:textSize="30dp" />


        </GridLayout>
    </LinearLayout>
</LinearLayout>